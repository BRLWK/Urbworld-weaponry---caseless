  <ThingDef ParentName="BaseCaselessModularWeapon">
    <defName>Caseless_MCBS</defName>
    <label>Modular heavy shotgun</label>
    <description>Green Mountain Armory's Muffalo is a 23mm bullpup caseless shotgun. Fires a wide range of ammunition from birdshot to explosive slugs.</description>
    <graphicData>
      <texPath>mcbstac</texPath>
      <graphicClass>ModularWeapons.Graphic_Modular</graphicClass>
    </graphicData>
    <uiIconScale>1.3</uiIconScale>
    <soundInteract>Interact_Shotgun</soundInteract>
    <recipeMaker>
      <researchPrerequisite>Gunsmithing</researchPrerequisite>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
    </recipeMaker>
    <weaponTags>
      <li>Gun</li>
      <li>IndustrialGunAdvanced</li>
      <li>ShortShots</li>
      <li>SpacerGun</li>
    </weaponTags>
    <weaponClasses>
      <li>ShortShots</li>
      <li>RangedHeavy</li>
    </weaponClasses>
    <statBases>
      <WorkToMake>18000</WorkToMake>
      <Mass>3</Mass>
      <AccuracyTouch>0.80</AccuracyTouch>
      <AccuracyShort>0.87</AccuracyShort>
      <AccuracyMedium>0.77</AccuracyMedium>
      <AccuracyLong>0.64</AccuracyLong>
      <RangedWeapon_Cooldown>2</RangedWeapon_Cooldown>
    </statBases>
    <comps>
      <li Class="ModularWeapons.CompProperties_ModularParts">
        <compClass>ModularWeapons.CompModularParts</compClass>
        <partKinds>
            <li>MCBS_Barrel</li>
            <li>MCBS_Mag</li>
            <li>MCBS_Action</li>
            <li>MCBS_Ammo</li>
            <li>MCBS_Sight</li>
            <li>MCBS_TopAttachment</li>
        </partKinds>
        <majorKinds>
            <li>MCBS_Barrel</li>
            <li>MCBS_Mag</li>
            <li>MCBS_Action</li>
            <li>MCBS_Ammo</li>
        </majorKinds>
        <defaultParts>
            <li>MCBS_Barrel_Standard</li>
            <li>MCBS_Mag_Standard</li>
            <li>MCBS_Action_Pump</li>
            <li>MCBS_Ammo_Buck</li>
        </defaultParts>
      </li>
    </comps>
    <costList>
      <Chemfuel>20</Chemfuel>
      <Steel>40</Steel>
      <ComponentIndustrial>4</ComponentIndustrial>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_HBSCShotgun</defaultProjectile>
        <warmupTime>1.4</warmupTime>
        <range>18.9</range>
        <burstShotCount>1</burstShotCount>
        <ticksBetweenBurstShots>12</ticksBetweenBurstShots>
        <soundCast>Shot_mcbShotgun</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>12</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>

